---
interface Props {
  title: string
  company: string
  description: string
  link?: string
  date: string
}

const { title, company, description, link, date } = Astro.props
---

<div
  class="md:space-x-4] relative mx-12 grid pb-2 before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 before:content-[''] md:grid-cols-2 md:gap-10 dark:before:border-white/15"
>
  <div class="relative pb-2 md:col-span-2">
    <div class="sticky top-0">
      <span class="absolute -left-[42px] rounded-full text-4xl text-white"
        >&bull;</span
      >

      <div class="flex gap-2">
        <h3 class="text-sm font-bold text-white">{title}</h3>
        <time
          class={`m-0 ${date !== 'Now' ? 'hidden md:block' : 'block'} rounded-lg bg-neutral-700 p-[2px] px-2 text-xs text-gray-600/80 text-white dark:text-white/80`}
          >{date}</time
        >
      </div>

      <h4
        class="text-sm font-semibold text-gray-600 opacity-60 dark:text-white"
      >
        {company}
      </h4>
      <div
        class="relative mt-4 flex flex-col gap-2 pb-4 text-sm text-gray-600 md:col-span-3 dark:text-gray-300"
      >
        {description}
      </div>
    </div>
  </div>
</div>
