---
import Svelte from '@components/icons/Svelte.astro'
import Tailwind from '@components/icons/Tailwind.astro'

const TAGS = {
  TAILWIND: {
    class: '',
    icon: Tailwind,
  },
  SVELTE: {
    class: '',
    icon: Svelte,
  },
}

const PROJECTS = [
  {
    title: 'Mixing Feelings - AI Powered',
    description:
      'AI application which classifies your feelings and recommends Spotify playlists based on your mood',
    link: 'https://mixin-feelings.vercel.app',
    github: 'https://github.com/germanfndez/mixin-feelings',
    image: '/mixing-feelings.webp',
    tags: [TAGS.TAILWIND, TAGS.SVELTE],
  },
]
---

<section>
  <h2 class="text-md mb-4 opacity-60">.projects</h2>

  <div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
        <article class="md:opacit y-80 group relative flex flex-col space-x-0 space-y-8 transition-all hover:opacity-100 md:flex-row md:space-x-8   md:space-y-0">
          <div class="w-full md:w-1/2">
            <div class="l relative col-span-6 row-span-5 flex transform flex-col items-center gap-8 overflow-clip rounded-xl shadow-xl transition duration-500 ease-in-out sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl">
              <a href={link} aria-label={title} target="_blank" class="w-full">
                <img
                  alt={`Project ${title} image`}
                  class="h-56 w-full object-cover object-top  transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                  loading="lazy"
                  src={image}
                />
              </a>
            </div>
          </div>

          <div class="relative w-full md:w-1/2 md:max-w-lg">
            <h3 class="text-md font-bold text-gray-800 dark:text-gray-100">
              {title}
            </h3>
            <div class="mt-2 flex flex-wrap">
              <ul class="mb-2 flex flex-row gap-x-2">
                {tags.map((tag) => (
                  <li>
                    <span
                      class={`flex gap-x-2 rounded-xl text-sm ${tag.class} transition-all md:grayscale md:group-hover:grayscale-0`}
                    >
                      <tag.icon class="size-5" />
                    </span>
                  </li>
                ))}
              </ul>
              <div class="relative flex flex-col gap-2 pb-4 text-sm text-gray-600 md:col-span-3 dark:text-gray-300">
                {description}
              </div>
            </div>

            <div class="flex gap-1 transition-all group-hover:opacity-100 md:absolute md:bottom-4 md:opacity-0">
              <a href={link} target="_blank" aria-label={title}>
                <svg
                  width="15"
                  height="15"
                  viewBox="0 0 15 15"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                >
                  <path
                    d="M3.64645 11.3536C3.45118 11.1583 3.45118 10.8417 3.64645 10.6465L10.2929 4L6 4C5.72386 4 5.5 3.77614 5.5 3.5C5.5 3.22386 5.72386 3 6 3L11.5 3C11.6326 3 11.7598 3.05268 11.8536 3.14645C11.9473 3.24022 12 3.36739 12 3.5L12 9.00001C12 9.27615 11.7761 9.50001 11.5 9.50001C11.2239 9.50001 11 9.27615 11 9.00001V4.70711L4.35355 11.3536C4.15829 11.5488 3.84171 11.5488 3.64645 11.3536Z"
                    fill="currentColor"
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>

              <a href={github} target="_blank" aria-label={title}>
                <svg
                  class="h-5 w-5 text-gray-800 dark:text-white"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12.006 2a9.847 9.847 0 0 0-6.484 2.44 10.32 10.32 0 0 0-3.393 6.17 10.48 10.48 0 0 0 1.317 6.955 10.045 10.045 0 0 0 5.4 4.418c.504.095.683-.223.683-.494 0-.245-.01-1.052-.014-1.908-2.78.62-3.366-1.21-3.366-1.21a2.711 2.711 0 0 0-1.11-1.5c-.907-.637.07-.621.07-.621.317.044.62.163.885.346.266.183.487.426.647.71.135.253.318.476.538.655a2.079 2.079 0 0 0 2.37.196c.045-.52.27-1.006.635-1.37-2.219-.259-4.554-1.138-4.554-5.07a4.022 4.022 0 0 1 1.031-2.75 3.77 3.77 0 0 1 .096-2.713s.839-.275 2.749 1.05a9.26 9.26 0 0 1 5.004 0c1.906-1.325 2.74-1.05 2.74-1.05.37.858.406 1.828.101 2.713a4.017 4.017 0 0 1 1.029 2.75c0 3.939-2.339 4.805-4.564 5.058a2.471 2.471 0 0 1 .679 1.897c0 1.372-.012 2.477-.012 2.814 0 .272.18.592.687.492a10.05 10.05 0 0 0 5.388-4.421 10.473 10.473 0 0 0 1.313-6.948 10.32 10.32 0 0 0-3.39-6.165A9.847 9.847 0 0 0 12.007 2Z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>
